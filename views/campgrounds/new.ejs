<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center">Create a new campground!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="location">Name</label>
                    <input class="form-control" type="text" name="name" placeholder="Campground Lit">
                </div>
                <div class="form-group">
                    <label for="location">Price</label>
                    <input class="form-control" type="number" name="price" placeholder="77.99" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <label for="location">Image</label>
                    <input class="form-control" type="text" name="image" placeholder="http://myimage.com/animage.png">
                </div>
                <div class="form-group">
                    <label for="location">Description</label>
                    <input class="form-control" type="text" name="description" placeholder="This camground is pretty lit fam, you should come thru.">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                </div>
            </form>
            <a style="text-align: center" href="/campgrounds">Go Back!</a>
        </div>
    </div>

<% include ../partials/footer %>